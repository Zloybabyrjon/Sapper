<?xml version="1.0"?>
<ruleset name="minesweeper">
    <description>Code style rules for minesweeper project</description>
    
    <!-- PSR-12 -->
    <rule ref="PSR12" />
    
    <!-- Настройка ширины строки -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120" />
        </properties>
    </rule>
    
    <!-- Исключение vendor каталога -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>